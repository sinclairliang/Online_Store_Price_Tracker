{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>
            Stores
            <small>list of supported stores</small>
        </h1>
    </div>
    <ul class="list-group">
        {% for store in stores %}

            <a href="{{ url_for('stores.store_page', store_id=store._id) }}" class="list-group-item">
                <h4 class="list-group-item-title">{{ store.name }}</h4>
                <p class="list-group-item-text">All URLs in this store should start with
                    <strong>{{ store.url_prefix }}</strong></p>
            </a>
        {% endfor %}
    </ul>
    {% if session['email'] in config.ADMINS %}
    <span>
        <a class="btn btn-success" href="{{ url_for('stores.create_store') }}">
            <i class="fa fa-plus" aria-hidden="true"> Create new store</i>
        </a>
    </span>
    {% endif %}
{% endblock %}
