{% extends "base.jinja2" %}
{% block content%}

    <div class="page-header">
        <h2>Create Alert</h2>
    </div>

    <div class="form-size">
        <form method="post">
            <div class = "form-group">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class = "form-group">
                <label for="url">Item URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://...">
            </div>
            <div class = "form-group">
                <label for="price_limit">Price Limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="30.0" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="help-block">We will notify you if the price drops below</p>
            </div>
            <button type="submit" class="btn btn-success">Create</button>

        </form>

    </div>

{% endblock %}
