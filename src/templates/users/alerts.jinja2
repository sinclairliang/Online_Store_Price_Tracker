{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Alerts
            <small> showing existing alerts</small>
        </h1>
    </div>


    <div class="list-group">
        {% for alert in alerts %}
            {% if  alert.active %}
                <a href="{{ url_for('alerts.get_alert_page', alert_id=alert._id) }}"
                   class="list-group-item">
                    <h4 class="list-group-item-heading">Alert for {{ alert.item.name }}</h4>
                    <p class="list-group-item-text">Last price found <strong>{{ alert.item.price }}</strong><br/>
                        Last checked on <strong>{{ alert.last_checked.strftime("%d-%m-%Y at %H:%M") }}</strong>
                    </p>
                </a>
            {% else %}
                <a href="{{ url_for('alerts.get_alert_page', alert_id=alert._id) }}"
                   class="list-group-item list-group-item-warning">
                    <h4 class="list-group-item-heading"><i class="fa fa-times-circle fa-sm"></i> Alert
                        for {{ alert.item.name }}</h4>
                    <p class="list-group-item-text">Last price found <strong>{{ alert.item.price }}</strong><br/>
                        Last checked on <strong>{{ alert.last_checked.strftime("%d-%m-%Y at %H:%M") }}</strong>
                    </p>
                </a>
            {% endif %}
        {% endfor %}
    </div>

    <hr>
    <a class="btn btn-success" href="{{ url_for('alerts.create_alert') }}"><i class="fa fa-plus" aria-hidden="true"></i>
        New Alerts</a>

{% endblock %}
